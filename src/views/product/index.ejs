<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Produk</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/simplePagination.css">
</head>
<body>
    <div class="container my-5">
        <div class="d-lg-flex">
            <h1 class="col-md-6 px-0">Produk</h1>
            <form id="search-form" method="get" class="col-md-6 pt-2 px-0">
                <div class="form-group row">
                    <label for="search" class="col-md-2 col-form-label">Cari</label>
                    <div class="col-md-7 pr-0">
                        <input class="form-control" type="search" name="search" id="search" placeholder="">
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-primary btn-block">Cari</button>
                    </div>
                </div>
            </form>
        </div>
        <a href="/product/new" class="btn btn-success mb-3">Tambah produk</a>

        <form action="">
            <div class="form-group">
                <label for="showSize">Tampilkan per</label>
                <select class="custom-select" name="showSize" id="showSize" style="width: initial">
                    <option value="10">10</option>
                    <option value="20">20</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                </select>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <th>No</th>
                    <th>Kode</th>
                    <th>Nama</th>
                    <th>Aksi</th>
                </thead>
                <tbody id="table-content"></tbody>
            </table>
        </div>

        <nav aria-label="Page navigation example">
            <ul id="pagination" class="pagination"></ul>
        </nav>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"></script>
    <script src="/js/jquery.simplePagination.js"></script>
    <script>
        let productData = [];
        let paginationData = null;
        let queryUrl = {
            size: 10,
            page: 1,
            name: "",
            code: ""
        }

        $("document").ready(function() {
            fetchData(queryUrl);
            initSearch();
            initOnShowSizeChange();
        });

        /**
         * args 
         * Example => {size: 10, page: 1, code: "001", name: "beras"}
         */
        function fetchData(args) {
            let params = [];
            if (args.size) params.push("size=" + args.size);
            if (args.page) params.push("page=" + args.page);
            if (args.code) params.push("code=" + args.code);
            if (args.name) params.push("name=" + args.name);

            renderLoadingStatus("Memuat...");

            $.ajax({
                method: "get",
                url: "/api/product" + (params.length > 0 ? "?" + params.join("&") : ""),
                contentType: "application/json",
                success: function(result) {
                    console.log(result);
                    productData = result.data.data;
                    paginationData = result.data.pagination;

                    renderTableContent(productData);
                    applyPagination(paginationData);
                },
                error: function(error) {
                    console.log(error);
                }
            });
        }

        function renderTableContent(products) {
            const el = $("#table-content");
            el.html("");

            if (products.length > 0) {
                products.forEach((product, index) => {
                el.append(
                    '<tr>' +
                        '<td>' + (index + 1 + ((paginationData.page - 1 )* paginationData.size)) + '</td>' +
                        '<td>' + product.code + '</td>' +
                        '<th>' + product.name + '</th>' +
                        '<td>'+
                            '<a href="/product/edit/' + product.id + '" class="btn btn-primary btn-sm">Sunting</a>' +
                            '<button class="btn btn-danger btn-sm ml-2">Hapus</button>' +
                        '</td>' +
                    '</tr>'
                )
                });
            } else {
                renderLoadingStatus("Kosong");
            }            
        }

        function renderLoadingStatus(status) {
            $("#table-content").html(
                '<tr>' +
                    '<td colspan="4" class="text-center">' + status + '</td>' + 
                '</tr>'
            );
        }

        /**
         * args
         * Example => {size: 10, page: 1, totalPage: 1, totalRecord: 4}
         */
        function applyPagination(args) {
            $("#pagination").pagination({
                items: args.totalRecord,
                itemsOnPage: args.size,
                currentPage: args.page,
                onPageClick: function(pageNumber, event) {
                    fetchData(10, pageNumber);
                }
            });

            setShowSize(args.size);
        }

        function initSearch() {
            $("#search-form").submit(function(e) {
                e.preventDefault();
                const inputValue = $("#search").val();
                queryUrl.code = inputValue;
                queryUrl.name = inputValue;

                if (inputValue.length === 0) {
                    queryUrl.page = 1;
                    queryUrl.code = "";
                    queryUrl.name = "";
                }

                fetchData(queryUrl);
            });
        }

        function setShowSize(size) {
            $("#showSize").val(size);
        }

        function initOnShowSizeChange() {
            const el = $("#showSize");

            el.change(function() {
                queryUrl.size = el.val();
                fetchData(queryUrl);
            });
        }
    </script>
</body>
</html>